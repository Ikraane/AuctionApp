@model ProjectApp.ViewModels.AuctionDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Seller)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seller)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AskPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AskPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<p/>
<div>
    <h4>Bid</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <b>Bidder</b>
                </th>
                <th>
                    <b>Amount</b>
                </th>
                <th>
                    <b>BidDate</b>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BidVMs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bidder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BidDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @Html.ActionLink("Edit Description", "EditDescription", new { id = Model.AuctionID }) |
    <a asp-action="Index">Back to List</a>
</div>
